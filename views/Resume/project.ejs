<%- include('../partials/header')%>
<div class="create_main">
  <div class="create_form container mt-5 p-3">
    <ul class="d-flex justify-content-evenly fs-3">
      <li><a href="/education">Eduaction</a></li>
      <li><a href="/skill">Skill</a></li>
      <li><a href="/project">Project</a></li>
      <li><a href="/experience">Experience</a></li>
      <li><a href="/interest">Interest</a></li>
    </ul>
    <hr />
    <!--  -->

    <div class="card">
      <h1 class="text-center mb-5">
        PROJECT
        <hr />
      </h1>
      <form action="/add-project" class="form-card" method="POST">
        <div class="row justify-content-between text-left">
          <div class="form-group col-sm-6 flex-column d-flex">
            <label class="form-control-label px-3"
              >Project Name<span class="text-danger"> *</span></label
            >
            <input
              class="create_input"
              type="text"
              placeholder="Project Name"
              name="project"
            />
          </div>
          <div class="form-group col-sm-6 flex-column d-flex">
            <label class="form-control-label px-3"
              >Technology<span class="text-danger"> *</span></label
            >
            <input
              class="create_input"
              type="text"
              placeholder="Technology"
              name="technology"
            />
          </div>
        </div>
        <div class="row justify-content-between text-left">
          <div class="form-group col-sm-6 flex-column d-flex">
            <label class="form-control-label px-3"
              >Description<span class="text-danger"> *</span></label
            >
            <input
              class="create_input"
              type="text"
              placeholder="Description"
              name="description"
            />
          </div>
          <div class="form-group col-sm-6 flex-column d-flex">
            <label class="form-control-label px-3"
              >link<span class="text-danger"> *</span></label
            >
            <input
              class="create_input"
              type="text"
              placeholder="Link"
              name="link"
            /><br />
            <br />
          </div>
        </div>
        <div class="row justify-content-end">
          <div class="form-group col-sm-6">
            <button type="submit" class="add_skill-btn">Add Skills</button>
          </div>
        </div>
      </form>
      <hr />
      <div class="d-flex flex-wrap">
        <% user.project.forEach((e, i)=> { %>
        <div class="card me-3 mb-3" style="width: 18rem">
          <div class="card-body">
            <h5 class="card-title"><%= e.project%></h5>
            <h6 class="card-subtitle mb-2 text-muted">
              Technology Used-<%= e.technology%>
            </h6>
            <h6>Description-<%= e.description%></h6>
            <p class="card-text">Link- <%= e.link%></p>
            <a href="/delete-pro/<%= i%>" class="create_card-btn card-link"
              >Remove</a
            >
          </div>
        </div>
    </div>
    </div>
    <%- include('../partials/footer')%>
  </div>
</div>
        <% })%>