<%- include('../partials/header')%>
<div class="create_main">
  <div class="create_form container mt-5 p-3">
    <ul class="d-flex justify-content-evenly fs-3">
      <li><a href="/education">Eduaction</a></li>
      <li><a href="/skill">Skill</a></li>
      <li><a href="/project">Project</a></li>
      <li><a href="/experience">Experience</a></li>
      <li><a href="/interest">Interest</a></li>
    </ul>
    <hr />
    <!--  -->
    <div class="card">
      <h1 class="text-center mb-5">
        SKILLS
        <hr />
      </h1>
      <form action="/add-skill" class="form-card" method="POST">
        <div class="row d-flex align-item-center justify-content-center text-left">
          <div class="form-group ms-5 col-sm-7 flex-column d-flex">
            <label class="form-control-label px-3"
              >Skills<span class="text-danger"> *</span></label
            >
            <input
              class="create_input"
              type="text"
              placeholder="Skill"
              name="skill"
              />
              <div class="row justify-content-end">
                <div class="form-group col-sm-8">
                  <button type="submit" class="add_skill-btn">Add Skills</button>
                </div>
              </div>
          </div>
          </form>
          <hr />
          <div class="d-flex flex-wrap">
            <% user.skill.forEach((e, i)=> { %>
            <div class="card me-3 mb-3" style="width: 18rem">
              <div class="card-body">
                <h5 class="card-title"><%= e.skill%></h5>
                <a href="/delete-skill/<%= i%>" class="create_card-btn card-link"
                  >Remove</a
                >
              </div>
            </div>

            <% })%>
          </div>
        </div>
    </div>
    </div>

        <%- include('../partials/footer')%>